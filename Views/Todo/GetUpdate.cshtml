@model Todo;


<div class="container">

    <h4 class="mt-4 h-25"> Update task</h4>

    <div class="my-auto mx-5 py-5 justify-content-center">
        <form asp-action="Update" asp-controller="Todo">

            <input type="hidden" name="Id" value="@Model.Id" asp-for="Id" />
            <div>
                <label>Name</label>
                <input type="text" name="name" value="@Model.Name" Placeholder="Name of Item" class="form-control" asp-for="Name" />

            </div>

            

            <div>
                <label>Description</label>
                <input type="text" name="Description" value="@Model.Description" Placeholder="Description of Item" class="form-control" asp-for="Description" />
            </div>
            <div>
                <label>Start time</label>
                <input type="datetime-local" name="StartTime" value="@String.Format("{0:yyyy-MM-ddTHH:mm}", @Model.StartTime)" asp-for="StartTime" class="form-control" />
            </div>
            <div>
                <label>End time</label>
                <input type="datetime-local" name="EndTime" value="@String.Format("{0:yyyy-MM-ddTHH:mm}", @Model.EndTime)" asp-for="EndTime" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="IsDone"></label>
                <select asp-for="IsDone" name="isDone" class="form-control">
                    <option value="true">True</option>
                    <option value="false">False</option>
                </select>
            </div>

            <div class="text-center mt-3">
                <button class="btn btn-primary mx-2 my2">Submit</button>
            </div>
        </form>

    </div>
